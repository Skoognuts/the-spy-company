                    <p class="inactive-link">{{ i }}</p>
                {% else %}
                    <a href="{{ path('app_hideout_index_page', {'page': i, 'order': order}) }}">{{ i }}</a>
                {% endif %}
                <p>&emsp;|&emsp;</p>
            {% endfor %}
            {% if hideoutsLength > 10 %}
                <a href="{{ path('app_hideout_index_page', {'page': 2, 'order': order}) }}">Page suivante</a>
            {% else %}
                <p class="inactive-link">Page suivante</p>

                    {% for hideout in hideouts %}
                        <tr>
                            <td>{{ hideout.id }}</td>
                            <td class="text-center">{{ hideout.code }}</td>
                            <td>{{ hideout.address }}</td>
                            <td>{{ hideout.country }}</td>
                            <td>{{ hideout.type }}</td>
                            <td class="text-center">

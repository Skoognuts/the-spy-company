{% extends 'base.html.twig' %}

{% block title %}ADMINISTRATION | CONTACTS | The Spy Company{% endblock %}

{% block body %}
    {{ include('parts/_header.html.twig') }}

    <main>
        <div class="titles-wrapper d-flex justify-content-between align-items-baseline">
            <h1>Liste des contacts</h1>
            <div class="d-flex">
                <a href="{{ path('app_contact_new') }}">Cr√©er un contact</a>
                <a class="invisible-link" href="{{ path('app_contact_new') }}">&emsp;‚ûï</a>
            </div>
        </div>
        <div class="pagination-menu mt-2 mb-0">
            <a href="{{ path('app_agent_index') }}">Agents</a>
            <p class="m-0">&emsp;|&emsp;</p>
            <a href="{{ path('app_target_index') }}">Cibles</a>
            <p class="m-0">&emsp;|&emsp;</p>
            <a href="{{ path('app_contact_index') }}">Contacts</a>
            <p class="m-0">&emsp;|&emsp;</p>
            <a href="{{ path('app_mission_index') }}">Missions</a>
            <p class="m-0">&emsp;|&emsp;</p>
            <a href="{{ path('app_hideout_index') }}">Planques</a>
            <p class="m-0">&emsp;|&emsp;</p>
            <a href="{{ path('app_specialty_index') }}">Sp√©cialit√©s</a>
        </div>
        <div class="table-wrapper">
            <table class="table">
                <thead>
                    <tr>
                        <th><a class="invisible-link" href="{{ path('app_contact_index') }}">Id{% if app.request.get('order') == null %} ü°á{% endif %}</a></th>
                        <th><a class="invisible-link" href="{{ path('app_contact_index', {'order': 'lastName'}) }}">Nom{% if app.request.get('order') == "lastName" %} ü°á{% endif %}</a></th>
                        <th><a class="invisible-link" href="{{ path('app_contact_index', {'order': 'firstName'}) }}">Pr√©nom{% if app.request.get('order') == "firstName" %} ü°á{% endif %}</a></th>
                        <th class="text-center"><a class="invisible-link" href="{{ path('app_contact_index', {'order': 'dateOfBirth'}) }}">Date de naissance{% if app.request.get('order') == "dateOfBirth" %} ü°á{% endif %}</a></th>
                        <th class="text-center"><a class="invisible-link" href="{{ path('app_contact_index', {'order': 'codeName'}) }}">Nom de code{% if app.request.get('order') == "codeName" %} ü°á{% endif %}</a></th>
                        <th><a class="invisible-link" href="{{ path('app_contact_index', {'order': 'nationality'}) }}">Nationalit√©{% if app.request.get('order') == "nationality" %} ü°á{% endif %}</a></th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% if contacts is not empty %}
                    {% for contact in contacts %}
                        <tr>
                            <td>{{ contact.id }}</td>
                            <td>{{ contact.lastName }}</td>
                            <td>{{ contact.firstName }}</td>
                            <td class="text-center">{{ contact.dateOfBirth | date('d/m/Y') }}</td>
                            <td class="text-center">{{ contact.codeName }}</td>
                            <td>{{ contact.nationality }}</td>
                            <td class="text-center">
                                <a href="{{ path('app_contact_show', {'id': contact.id}) }}">Voir</a>
                                <a href="{{ path('app_contact_edit', {'id': contact.id}) }}">Modifier</a>
                            </td>
                        </tr>
                    {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="7">Aucun contact en base de donn√©es</td>
                    </tr>
                {% endif %}
                </tbody>
            </table>
        </div>
        {% set order = app.request.get('order') %}
        <div class="pagination-menu mb-2">
            <p class="inactive-link">Page pr√©c√©dente</p>
            <p>&emsp;|&emsp;</p>
            {% for i in range(1, pageCount) %}
                {% if i == 1 %}
                    <p class="inactive-link">{{ i }}</p>
                {% else %}
                    <a href="{{ path('app_contact_index_page', {'page': i, 'order': order}) }}">{{ i }}</a>
                {% endif %}
                <p>&emsp;|&emsp;</p>
            {% endfor %}
            {% if contactsLength > 10 %}
                <a href="{{ path('app_contact_index_page', {'page': 2, 'order': order}) }}">Page suivante</a>
            {% else %}
                <p class="inactive-link">Page suivante</p>
            {% endif %}
        </div>
        <div class="pagination-menu mt-0">
            <a href="{{ path('admin') }}">Retour</a>
        </div>
    </main>

    {{ include('parts/_footer.html.twig') }}
{% endblock %}

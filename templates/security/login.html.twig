{% extends 'base.html.twig' %}

{% block title %}CONNEXION | The Spy Company{% endblock %}

{% block body %}
<div class="login-wrapper">
    {{ include('parts/_header.html.twig') }}

    <main>
        <form class="login-form" method="post">
            {% if error %}
                <div class="alert alert-danger">Vos identifiants de connexion sont incorrects.</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <div class="login-title-wrapper">
                <h1 class="h3 mb-3 font-weight-normal">Connexion</h1>
            </div>

            <div class="form-wrapper">
                <label for="inputEmail">E-mail</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                <label for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Se souvenir de moi
                    </label>
                </div>
                
                <button class="btn btn-lg btn-primary login" type="submit">
                    Se connecter
                </button>
            </div>
        </form>
    </main>

    {{ include('parts/_footer.html.twig') }}
</div>
{% endblock %}
